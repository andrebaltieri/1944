@model IEnumerable<Guardian.Models.Application>
@{
    ViewData["Title"] = "Aplicações";
}

<a asp-controller="Application" asp-action="Create" class="btn btn-lg btn-success pull-right"><i class="fa fa-plus"></i> ADICIONAR</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Aplicação</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td class="text-center">@item.Id</td>
                <td class="text-center">@item.Name</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-default" asp-controller="Application" asp-action="Details" asp-route-id="@item.Id" title="Detalhes"><i class="fa fa-list-alt"></i></a>
                        <a class="btn btn-sm btn-info" asp-controller="Application" asp-action="Edit" asp-route-id="@item.Id" title="Editar"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-sm btn-danger" asp-controller="Application" asp-action="Delete" asp-route-id="@item.Id" title="Excluir"><i class="fa fa-remove"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>