@model IEnumerable<Guardian.Models.Role>
@{
    ViewData["Title"] = "Perfis de Acesso";
}

<a asp-controller="Role" asp-action="Create" class="btn btn-lg btn-success pull-right"><i class="fa fa-plus"></i> ADICIONAR</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="text-center">#</th>
            <th class="text-center">Perfil</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model){
            <tr>
                <td class="text-center">@role.Id</td>
                <td class="text-center">@role.Name</td>
                <td class="text-center">
                    <div class="btn-group">
                        <a class="btn btn-sm btn-default" asp-controller="Role" asp-action="Details" asp-route-id="@role.Id" title="Detalhes"><i class="fa fa-list-alt"></i></a>
                        <a class="btn btn-sm btn-info" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" title="Editar"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-sm btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" title="Excluir"><i class="fa fa-remove"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>